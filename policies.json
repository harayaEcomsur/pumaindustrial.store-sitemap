[
  {
    "name": "resolve-graphql",
    "description": "Allows access to resolve a graphql request",
    "statements": [
      {
        "actions": ["post", "get"],
        "effect": "allow",
        "resources": [
          "vrn:pumaindustrial.store-sitemap:{{region}}:{{account}}:{{workspace}}:/_v/graphql"
        ]
      }
    ]
  },
  {
    "name": "vbase-read-write",
    "description": "Allows read and write access to VBase",
    "statements": [
      {
        "actions": ["get", "put", "delete"],
        "effect": "allow",
        "resources": [
          "vrn:vbase:{{region}}:{{account}}:{{workspace}}:*"
        ]
      }
    ]
  },
  {
    "name": "catalog-api-proxy",
    "description": "Allows access to catalog API",
    "statements": [
      {
        "actions": ["get", "post"],
        "effect": "allow",
        "resources": [
          "vrn:vtex.catalog-api-proxy:{{region}}:{{account}}:{{workspace}}:*"
        ]
      }
    ]
  }
]
