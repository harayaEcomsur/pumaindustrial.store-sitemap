{
  "memory": 512,
  "ttl": 60,
  "timeout": 55,
  "minReplicas": 2,
  "maxReplicas": 10,
  "workers": 4,
  "routes": {
    "newSitemapWithBinding": {
      "path": "/:binidingIdentifier/sitemap/:path",
      "public": true
    },
    "generateSitemap": {
      "path": "/generate-sitemap",
      "public": false
    },
    "robots": {
      "path": "/robots.txt",
      "public": true
    }
  },
  "events": {
    "generateSitemap": {
      "sender": "vtex.store-sitemap",
      "keys": ["sitemap.generate"]
    }
  }
}
