{
  "name": "store-sitemap",
  "vendor": "vtex",
  "version": "0.2.0",
  "title": "Sitemap",
  "description": "Proxy to sitemap.xml",
  "mustUpdateAt": "2019-08-01",
  "categories": [],
  "registries": [
    "smartcheckout"
  ],
  "settingsSchema": {},
  "dependencies": {
    "vtex.render-server": "7.x"
  },
  "builders": {
    "node": "3.x"
  },
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/*.xml"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "janus-edge.vtex.com.br",
        "path": "/robots.txt"
      }
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "vtex.render-server:upload-canonical-routes"
    }
  ],
  "credentialType": "absolute",
  "scripts": {
    "postreleasy": "vtex publish --verbose"
  }
}
